rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Multimedia - Public Read, Admin Write
    match /multimedia/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; 
      // Note: Admin SDK bypasses rules, but for client-side uploads later we might need specific roles.
      // For now, allowing any auth to write to multimedia is a placeholder, strictly it should be admin.
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
